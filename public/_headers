/*
  # unsafe-inline: Starlight inline scripts/styles
  # wasm-unsafe-eval: Pagefind search engine
  # cloud.umami.is: analytics script + beacons
  # app.netlify.com: deploy preview toolbar iframe
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'wasm-unsafe-eval' https://cloud.umami.is; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self' https://cloud.umami.is; frame-src https://app.netlify.com; object-src 'none'; base-uri 'self'; form-action 'none'

  # Block other sites from framing this site (clickjacking)
  X-Frame-Options: DENY

  # Block MIME-type sniffing
  X-Content-Type-Options: nosniff

  # Force HTTPS, 1 year, preload-list eligible
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Full path same-origin, origin-only cross-origin, nothing on HTTP downgrade
  Referrer-Policy: strict-origin-when-cross-origin

  # Disable unused browser APIs
  Permissions-Policy: camera=(), microphone=(), geolocation=(), browsing-topics=()

  # Prevent cross-origin window references
  Cross-Origin-Opener-Policy: same-origin

  # Block cross-origin resource embedding
  Cross-Origin-Resource-Policy: same-origin

  # Prevent search engine indexing
  X-Robots-Tag: noindex, nofollow

# Cache hashed assets forever
/_astro/*
  Cache-Control: public, max-age=31536000, immutable
